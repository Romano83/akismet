{
    "name": "romano83/akismet",
    "description": "PSR-7 library to communicate with Akismet service to determine if a submitted comment to your website should be considered spam or not.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php" : ">=7.1",
        "guzzlehttp/guzzle": "^6.3"
    },
    "authors": [{
        "name": "Romain Guillemin",
        "email": "contact@romain-guillemin.fr",
        "homepage": "https://www.romain-guillemin.fr",
        "role": "Developer"
    }],
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "squizlabs/php_codesniffer": "^3.0"
    },
  "autoload": {
      "psr-4": {
          "Romano83\\Akismet\\": "src"
      }
  },
  "autoload-dev": {
      "psr-4": {
          "Romano83\\Akismet\\Tests\\": "tests"
      }
  },
    "support" : {
        "email" : "contact@romain-guillemin.fr",
        "source": "https://github.com/Romano83/akismet",
        "issues": "https://github.com/Romano83/akismet/issues"
    },
}
